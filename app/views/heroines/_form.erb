<% if flash[:error] %>
  <ul>
    <% flash[:error].each do |e| %>
      <li><%= e %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @heroine do |f| %>
<%= f.label :name %>
<%= f.text_field :name %><br>
<%= f.label :super_name %>
<%= f.text_field :super_name %><br>
<%= f.label :power %>
<%= f.select :power_id, @power_options %><br>
<%= f.submit %>
<% end %>
