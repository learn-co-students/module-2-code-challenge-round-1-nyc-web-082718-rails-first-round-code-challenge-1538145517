<h2>All Heroines</h2>

<%= form_tag(heroines_path, method: :get) do %>
  <strong><%= label_tag(:search, "Search by power") %></strong><br>
  <%= text_field_tag(:search) %>
  <%= submit_tag("Search") %>
<% end %>

<% if @search %>
  <%= button_to("Reset", heroines_path, method: :get) %>
<% end %>

<ul>
  <% @heroines.each do |heroine| %>
    <li>
      <%= link_to(heroine.super_name, heroine_path(heroine)) %>
    </li>
    <br>
  <% end %>
</ul>

<%= button_to("New", new_heroine_path, method: :get) %><br>

<%= button_to("Powers", powers_path, method: :get) %>
