<h2>All Heroines</h2>

<h4>Search by superpower:</h4>
<%= form_tag(heroines_path, method: "get") do %>
  <%= select_tag :search, options_for_select(@powers.map { |p| [p.name, p.id] }) %>
  <%= submit_tag "Search" %>
<% end %>





<ul>
  <% if @heroines.length == 0 %>
    No superheroines 😔
  <% else %>
    <% @heroines.each do |heroine| %>
      <li>
        🌞 <%= link_to heroine.super_name, heroine %>
      </li>
      <br>
    <% end %>
  <% end %>
</ul>


<%= link_to "Build👏A👏Heroine👏", new_heroine_path %><br>

<% if @heroines.length != Heroine.all.length %>
  <%= link_to "Display all heroines 🚄", heroines_path %>
<% end %>
