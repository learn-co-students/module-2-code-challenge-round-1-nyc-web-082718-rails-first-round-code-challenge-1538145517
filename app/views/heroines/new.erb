<h1> Create a Heroine </h1>

<% if flash[:error] %>
  <% flash[:error].each do |error| %>
    <%= error %>
  <% end %>
<% end %>

<%= form_for @heroine do |f| %>
Name: <%= f.text_field :name %><br>
Super Name: <%= f.text_field :super_name %><br>
Select A Power: <%= collection_select(:heroine, :power_id, Power.all, :id, :name) %><br>
<%= f.submit %>
<% end %>
<br>

<%= link_to 'Go to All Heroines', heroines_path %>
